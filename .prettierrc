{
  "useTabs": false,
  "printWidth": 120,
  "tabWidth": 2,
  "singleQuote": false,
  "trailingComma": "all",
  "bracketSameLine": false,
  "parser": "typescript",
  "semi": true,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": ["*.json", ".*.json"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "parser": "scss"
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "parser": "markdown"
      }
    }
  ]
}
